<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.media.mapper.MediaTagMapper">

    <resultMap type="MediaTag" id="MediaTagResult">
        <result property="tagId"    column="tag_id"    />
        <result property="content"    column="content"    />
        <result property="status"    column="status"    />
        <result property="clickCount"    column="click_count"    />
        <result property="sort"    column="sort"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="updateBy"    column="update_by"    />
        <result property="remark"    column="remark"    />
        <result property="isDefault"    column="is_default"    />
        <result property="cssClass"    column="css_class"    />
        <result property="listClass"    column="list_class"    />
    </resultMap>

    <sql id="selectMediaTagVo">
        select tag_id, content, status, click_count, sort,
        create_time, update_time, create_by, update_by, remark,
        is_default,css_class,list_class
        from wm_media_tag
    </sql>

    <select id="selectMediaTagList" parameterType="MediaTag" resultMap="MediaTagResult">
        <include refid="selectMediaTagVo"/>
        <where>
            <if test="content != null  and content != ''"> and content like concat('%', #{content}, '%')</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="sort != null "> and sort = #{sort}</if>
        </where>
    </select>

    <select id="selectMediaTagByTagId" parameterType="Long" resultMap="MediaTagResult">
        <include refid="selectMediaTagVo"/>
        where tag_id = #{tagId}
    </select>

    <delete id="deleteMediaTagByTagIds" parameterType="String">
        delete from wm_media_tag where tag_id in
        <foreach item="tagId" collection="array" open="(" separator="," close=")">
            #{tagId}
        </foreach>
    </delete>
</mapper>
