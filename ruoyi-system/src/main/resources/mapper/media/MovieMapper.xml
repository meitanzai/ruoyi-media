<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.media.mapper.MovieMapper">

    <resultMap type="Movie" id="MovieResult">
        <result property="movieId"    column="movie_id"    />
        <result property="images"    column="images"    />
        <result property="title"    column="title"    />
        <result property="movieType"    column="movie_type"    />
        <result property="country"    column="country"    />
        <result property="label"    column="label"    />
        <result property="description"    column="description"    />
        <result property="publishBy"    column="publish_by"    />
        <result property="publishTime"    column="publish_time"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="remark"    column="remark"    />
        <result property="readCount"    column="read_count"    />
        <result property="commentCount"    column="comment_count"    />
        <result property="followCount"    column="follow_count"    />
        <result property="collectionCount"    column="collection_count"    />
        <result property="likesCount"    column="likes_count"    />
        <result property="unlikesCount"    column="unlikes_count"    />
        <result property="shareCount"    column="share_count"    />
        <result property="isComment"    column="is_comment"    />
        <result property="isDownload"    column="is_download"    />
        <result property="price"    column="price"    />
        <result property="rate"    column="rate"    />
    </resultMap>


    <resultMap id="MovieVideoResult" type="MovieVO" extends="MovieResult">
        <collection property="videoList" ofType="Video"  column="movie_id" select="selectVideoListByMovieId"/>
    </resultMap>



    <resultMap type="Video" id="VideoResult">
        <result property="videoId"    column="video_id"    />
        <result property="title"    column="title"    />
        <result property="url"    column="url"    />
        <result property="ext"    column="ext"    />
        <result property="length"    column="length"    />
        <result property="type"    column="type"    />
        <result property="storageType"    column="storage_type"    />
        <result property="createTime"    column="create_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="remark"    column="remark"    />
        <result property="movieId"    column="movie_id"    />
        <result property="filesize"    column="filesize"    />
    </resultMap>

    <sql id="selectMovieVo">
        select movie_id, images, title, movie_type, country, label, description, publish_by, publish_time, status, create_by, create_time, update_by, update_time, del_flag, remark, read_count, comment_count, follow_count, collection_count, likes_count, unlikes_count, share_count, is_comment, is_download, price, rate from wm_movie
    </sql>


    <select id="selectHotMovieList" parameterType="Integer" resultMap="MovieResult">
        <include refid="selectMovieVo"/>
        order by create_time desc limit #{top}
    </select>

    <select id="selectVideoById" parameterType="Long" resultMap="VideoResult">
      select * from wm_video where video_id = #{videoId}
    </select>

    <select id="selectVideoListByMovieId" parameterType="Long" resultMap="VideoResult">
      select * from wm_video where movie_id = #{movie_id}
    </select>


    <select id="selectMovieList" parameterType="MovieVO" resultMap="MovieResult">
        <include refid="selectMovieVo"/>
        <where>
            <if test="images != null  and images != ''"> and images = #{images}</if>
            <if test="title != null  and title != ''"> and title = #{title}</if>
            <if test="movieType != null  and movieType != ''"> and movie_type = #{movieType}</if>
            <if test="country != null  and country != ''"> and country = #{country}</if>
            <if test="label != null  and label != ''"> and label = #{label}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="publishBy != null  and publishBy != ''"> and publish_by = #{publishBy}</if>
            <if test="publishTime != null "> and publish_time = #{publishTime}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="readCount != null "> and read_count = #{readCount}</if>
            <if test="commentCount != null "> and comment_count = #{commentCount}</if>
            <if test="followCount != null "> and follow_count = #{followCount}</if>
            <if test="collectionCount != null "> and collection_count = #{collectionCount}</if>
            <if test="likesCount != null "> and likes_count = #{likesCount}</if>
            <if test="unlikesCount != null "> and unlikes_count = #{unlikesCount}</if>
            <if test="shareCount != null "> and share_count = #{shareCount}</if>
            <if test="isComment != null  and isComment != ''"> and is_comment = #{isComment}</if>
            <if test="isDownload != null  and isDownload != ''"> and is_download = #{isDownload}</if>
            <if test="price != null "> and price = #{price}</if>
            <if test="rate != null "> and rate = #{rate}</if>
        </where>
    </select>

    <select id="selectMovieById" parameterType="Long" resultMap="MovieVideoResult">
        select a.movie_id, a.images, a.title, a.movie_type, a.country, a.label, a.description, a.publish_by, a.publish_time, a.status, a.create_by, a.create_time, a.update_by, a.update_time, a.del_flag, a.remark, a.read_count, a.comment_count, a.follow_count, a.collection_count, a.likes_count, a.unlikes_count, a.share_count, a.is_comment, a.is_download, a.price, a.rate
        from wm_movie a
        where a.movie_id = #{movieId}
    </select>

    <insert id="insertMovie" parameterType="Movie" useGeneratedKeys="true" keyProperty="movieId">
        insert into wm_movie
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="images != null">images,</if>
            <if test="title != null and title != ''">title,</if>
            <if test="movieType != null">movie_type,</if>
            <if test="country != null">country,</if>
            <if test="label != null">label,</if>
            <if test="description != null">description,</if>
            <if test="publishBy != null">publish_by,</if>
            <if test="publishTime != null">publish_time,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="remark != null">remark,</if>
            <if test="readCount != null">read_count,</if>
            <if test="commentCount != null">comment_count,</if>
            <if test="followCount != null">follow_count,</if>
            <if test="collectionCount != null">collection_count,</if>
            <if test="likesCount != null">likes_count,</if>
            <if test="unlikesCount != null">unlikes_count,</if>
            <if test="shareCount != null">share_count,</if>
            <if test="isComment != null">is_comment,</if>
            <if test="isDownload != null">is_download,</if>
            <if test="price != null">price,</if>
            <if test="rate != null">rate,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="images != null">#{images},</if>
            <if test="title != null and title != ''">#{title},</if>
            <if test="movieType != null">#{movieType},</if>
            <if test="country != null">#{country},</if>
            <if test="label != null">#{label},</if>
            <if test="description != null">#{description},</if>
            <if test="publishBy != null">#{publishBy},</if>
            <if test="publishTime != null">#{publishTime},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="remark != null">#{remark},</if>
            <if test="readCount != null">#{readCount},</if>
            <if test="commentCount != null">#{commentCount},</if>
            <if test="followCount != null">#{followCount},</if>
            <if test="collectionCount != null">#{collectionCount},</if>
            <if test="likesCount != null">#{likesCount},</if>
            <if test="unlikesCount != null">#{unlikesCount},</if>
            <if test="shareCount != null">#{shareCount},</if>
            <if test="isComment != null">#{isComment},</if>
            <if test="isDownload != null">#{isDownload},</if>
            <if test="price != null">#{price},</if>
            <if test="rate != null">#{rate},</if>
         </trim>
    </insert>

    <update id="updateMovie" parameterType="Movie">
        update wm_movie
        <trim prefix="SET" suffixOverrides=",">
            <if test="images != null">images = #{images},</if>
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="movieType != null">movie_type = #{movieType},</if>
            <if test="country != null">country = #{country},</if>
            <if test="label != null">label = #{label},</if>
            <if test="description != null">description = #{description},</if>
            <if test="publishBy != null">publish_by = #{publishBy},</if>
            <if test="publishTime != null">publish_time = #{publishTime},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="readCount != null">read_count = #{readCount},</if>
            <if test="commentCount != null">comment_count = #{commentCount},</if>
            <if test="followCount != null">follow_count = #{followCount},</if>
            <if test="collectionCount != null">collection_count = #{collectionCount},</if>
            <if test="likesCount != null">likes_count = #{likesCount},</if>
            <if test="unlikesCount != null">unlikes_count = #{unlikesCount},</if>
            <if test="shareCount != null">share_count = #{shareCount},</if>
            <if test="isComment != null">is_comment = #{isComment},</if>
            <if test="isDownload != null">is_download = #{isDownload},</if>
            <if test="price != null">price = #{price},</if>
            <if test="rate != null">rate = #{rate},</if>
        </trim>
        where movie_id = #{movieId}
    </update>

    <delete id="deleteMovieById" parameterType="Long">
        delete from wm_movie where movie_id = #{movieId}
    </delete>

    <delete id="deleteMovieByIds" parameterType="String">
        delete from wm_movie where movie_id in
        <foreach item="movieId" collection="array" open="(" separator="," close=")">
            #{movieId}
        </foreach>
    </delete>

    <delete id="deleteVideoByVideoIds" parameterType="String">
        delete from wm_video where video_id in
        <foreach item="videoId" collection="array" open="(" separator="," close=")">
            #{videoId}
        </foreach>
    </delete>

    <delete id="deleteVideoByMovieId" parameterType="Long">
        delete from wm_video where movie_id = #{movie_id}
    </delete>

    <insert id="batchVideo">
        insert into wm_video( video_id, title, url, ext, length, type, storage_type, create_time, create_by, update_time, update_by, del_flag, remark, movie_id, filesize) values
		<foreach item="item" index="index" collection="list" separator=",">
            ( #{item.videoId}, #{item.title}, #{item.url}, #{item.ext}, #{item.length}, #{item.type}, #{item.storageType}, #{item.createTime}, #{item.createBy}, #{item.updateTime}, #{item.updateBy}, #{item.delFlag}, #{item.remark}, #{item.movieId}, #{item.filesize})
        </foreach>
    </insert>
</mapper>
